<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Color palette -->
        <item name="colorPrimary">@color/solarizedBase02</item>
        <item name="colorPrimaryDark">@color/grey900</item>
        <item name="themedBackground">@color/solarizedBase03</item>
        <item name="colorAccent">@color/solarizedOrange</item>
        <item name="android:textColorPrimary">@color/solarizedBase2</item>
        <item name="android:textColorSecondary">@color/solarizedBase1</item>
        <item name="android:textColorLink">@color/solarizedBlue</item>
        <item name="colorDefinition">@color/solarizedBlue</item>
        <item name="colorLiteral">@color/solarizedYellow</item>

        <!-- Custom theme override -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="android:statusBarColor">@color/solarizedBase03</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.Afterglow">
        <item name="colorPrimary">@color/afterglowHighlight</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/afterglowAccent</item>
        <item name="themedBackground">@color/afterglowBackground</item>
        <item name="android:textColorPrimary">@color/afterglowForeground</item>
        <item name="android:textColorSecondary">@color/afterglowComment</item>
        <item name="android:textColorLink">@color/afterglowConstant</item>
        <item name="colorDefinition">@color/afterglowDefinition</item>
        <item name="colorLiteral">@color/afterglowString</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog.Afterglow</item>
        <item name="android:statusBarColor">@color/afterglowBackground</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.Tomorrow">
        <item name="colorPrimary">@color/tomorrowHighlight</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="themedBackground">@color/tomorrowBackground</item>
        <item name="colorAccent">@color/tomorrowAccent</item>
        <item name="android:textColorPrimary">@color/tomorrowForeground</item>
        <item name="android:textColorSecondary">@color/tomorrowComment</item>
        <item name="android:textColorLink">@color/tomorrowConstant</item>
        <item name="colorDefinition">@color/tomorrowDefinition</item>
        <item name="colorLiteral">@color/tomorrowString</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog.Tomorrow</item>
        <item name="android:statusBarColor">@color/tomorrowBackground</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>